{
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 120,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "endOfLine": "lf",
  "htmlWhitespaceSensitivity": "css",
  "insertPragma": false,
  "proseWrap": "preserve",
  "quoteProps": "as-needed",
  "requirePragma": false,
  "embeddedLanguageFormatting": "auto",
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "parser": "html",
        "printWidth": 120,
        "tabWidth": 2,
        "singleQuote": false,
        "htmlWhitespaceSensitivity": "css",
        "bracketSameLine": false
      }
    },
    {
      "files": "*.css",
      "options": {
        "parser": "css",
        "printWidth": 120,
        "tabWidth": 2,
        "singleQuote": false
      }
    },
    {
      "files": "*.js",
      "options": {
        "parser": "babel",
        "printWidth": 120,
        "tabWidth": 2,
        "singleQuote": true
      }
    }
  ]
}
