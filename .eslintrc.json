{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "html",
    "jsdoc"
  ],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": "warn",
    "no-debugger": "error",
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "brace-style": ["error", "1tbs"],
    "comma-dangle": ["error", "only-multiline"],
    "max-len": ["error", { "code": 120, "ignoreUrls": true, "ignoreStrings": true }],
    "no-trailing-spaces": "error",
    "eol-last": "error",
    "no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 1 }],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }],
    "object-curly-spacing": ["error", "always"],
    "array-bracket-spacing": ["error", "never"],
    "space-in-parens": ["error", "never"],
    "comma-spacing": ["error", { "before": false, "after": true }],
    "key-spacing": ["error", { "beforeColon": false, "afterColon": true }],
    "space-infix-ops": "error",
    "no-var": "error",
    "prefer-const": ["error", { "destructuring": "any" }],
    "template-curly-spacing": "error",
    "arrow-spacing": "error",
    "prefer-arrow-callback": "error",
    "arrow-parens": ["error", "always"],
    "prefer-template": "error",
    "template-tag-spacing": ["error", "never"],
    "no-useless-concat": "error",
    "prefer-destructuring": ["error", {
      "array": true,
      "object": true
    }, {
      "enforceForRenamedProperties": false
    }],
    "jsdoc/require-description": "warn",
    "jsdoc/require-description-complete-sentence": "warn",
    "jsdoc/require-example": "off",
    "jsdoc/require-hyphen-before-param-description": "warn",
    "jsdoc/require-param-description": "warn",
    "jsdoc/require-returns-description": "warn",
    "jsdoc/require-throws-description": "warn",
    "jsdoc/check-alignment": "error",
    "jsdoc/check-indentation": "error",
    "jsdoc/check-line-alignment": "warn",
    "jsdoc/check-syntax": "error",
    "jsdoc/check-tag-names": "error",
    "jsdoc/check-types": "error",
    "html/indent": ["error", 2],
    "html/report-bad-indent": "error",
    "html/match-closing": "error",
    "html/tag-req-attr": ["error", {
      "img": ["alt"],
      "input": ["type"],
      "button": ["type"]
    }],
    "html/attrs-newline": "off",
    "html/attrs-order": ["warn", {
      "order": ["id", "class", "name", "type", "value", "placeholder", "required", "disabled", "readonly", "checked", "selected", "multiple", "src", "alt", "href", "target", "rel", "title", "role", "aria-", "data-", "on-"]
    }],
    "html/id-class-order": "warn",
    "html/element-required-attributes": "error",
    "html/img-usage": "error",
    "html/valid-template-parsing": "error",
    "html/closing-tag-required": "error",
    "html/self-closing": ["error", "always", {
      "void": "always",
      "normal": "always",
      "component": "always"
    }],
    "html/tag-closing-order": "error",
    "html/tag-open": "error",
    "html/tag-pair": "error",
    "html/tagname-lowercase": "error"
  },
  "globals": {
    "document": "readonly",
    "window": "readonly",
    "console": "readonly",
    "setTimeout": "readonly",
    "setInterval": "readonly",
    "clearTimeout": "readonly",
    "clearInterval": "readonly",
    "HTMLElement": "readonly",
    "HTMLElement.prototype.classList": "readonly",
    "HTMLElement.prototype.addEventListener": "readonly",
    "HTMLElement.prototype.removeEventListener": "readonly",
    "HTMLElement.prototype.querySelector": "readonly",
    "HTMLElement.prototype.querySelectorAll": "readonly"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    "*.min.js",
    "*.min.css",
    "assets/",
    "vendor/",
    "coverage/",
    ".nyc_output/",
    "*.log",
    "*.lock",
    "*.bak",
    "*.tmp",
    "*.backup"
  ],
  "overrides": [
    {
      "files": ["*.html"],
      "processor": "html/html",
      "rules": {
        "indent": ["error", 2, { "SwitchCase": 1 }],
        "quotes": ["error", "double"],
        "semi": ["error", "never"],
        "no-trailing-spaces": "error",
        "linebreak-style": "off"
      }
    },
    {
      "files": ["*.js"],
      "extends": [
        "eslint:recommended"
      ],
      "rules": {
        "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
      }
    },
    {
      "files": ["*.css", "*.scss", "*.sass"],
      "rules": {
        "indent": ["error", 2],
        "no-empty-rulesets": "error",
        "no-duplicate-selectors": "error",
        "no-descending-specificity": "error",
        "selector-attribute-quotes": ["error", "always"],
        "selector-attribute-operator-space-before": ["error", "never"],
        "selector-attribute-operator-space-after": ["error", "never"],
        "selector-attribute-brackets-space-inside": ["error", "never"]
      }
    }
  ]
}
