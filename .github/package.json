{
  "name": "learnhome-ci",
  "version": "1.0.0",
  "description": "CI dependencies for Learn@Home",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint ../. --config eslint.config.js",
    "lint:fix": "eslint ../. --config eslint.config.js --fix",
    "format": "prettier --check \"../**/*.{html,css,js,mjs,cjs,json}\" --ignore-path ../.gitignore",
    "format:fix": "prettier --write \"../**/*.{html,css,js,mjs,cjs,json}\" --ignore-path ../.gitignore",
    "check": "npm run lint && npm run format"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-plugin-html": "^8.1.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^62.5.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.6",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "17.3.0",
    "prettier": "^3.7.4"
  }
}
